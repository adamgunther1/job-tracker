<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city_id %>
  <%= f.text_field :city_id %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :title, :prompt => "Select" %>

  <%= f.submit %>
<% end %>
<br>
<%= link_to "Create New Category", new_category_path(@job.category) %>
